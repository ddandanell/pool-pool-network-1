{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/website/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/website/index.html"
    },
    {
      "source": "/pages/:path*",
      "destination": "/website/pages/:path*"
    },
    {
      "source": "/css/:path*",
      "destination": "/website/css/:path*"
    },
    {
      "source": "/js/:path*",
      "destination": "/website/js/:path*"
    },
    {
      "source": "/images/:path*",
      "destination": "/website/images/:path*"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/website/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/website/robots.txt"
    }
  ]
}
